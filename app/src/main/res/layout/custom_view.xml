<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#000000">






    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal"
                  android:layout_marginTop="0dp">


        <ImageView android:layout_width="13dp" android:layout_height="13dp"
                   android:layout_marginTop="9.8dp"
                    android:src="@drawable/for_todo"/>


        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  tools:text="Title"
                  android:textStyle="bold"
                  android:textSize="22sp"
                  android:layout_marginStart="0dp"
                  android:id="@+id/textview_title" android:textColor="#FADBD9"
                  android:fontFamily="casual"/>


    </LinearLayout>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="0.5dp"
              android:id="@+id/textview_desc"
              tools:text="This is a sample body text, it should be pretty long, I guess, but this should work fine, really, I'm filling just anything."
              android:background="#231F1A1A" android:textColor="#CC1B1B" android:textAllCaps="false"
              android:textAlignment="viewStart"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal"
    android:layout_marginBottom="8dp">


        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        >


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      tools:text="\@03/22" android:textColor="#FFC107" android:textSize="14sp"
                      android:layout_marginStart="0dp"
                      android:id="@+id/textview_date"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      tools:text="\@1600" android:textColor="#FFEB3B" android:textSize="14sp"
                      android:layout_marginStart="0dp"
                      android:id="@+id/textview_time"/>

        </LinearLayout>






            <ImageView android:layout_width="28dp" android:layout_height="wrap_content"
                       tools:src="@drawable/delete"
                       android:id="@+id/delete_button"
                       android:layout_marginStart="260dp"
            />
    </LinearLayout>





</LinearLayout>

